    <sql id="Base_Column_List">
      id, name, article_count, bg_color, font_color, create_time, update_time, status
    </sql>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from t_tag
        where id = #{id,jdbcType=INTEGER}
    </select>


    <!--根据文章id获取标签-->
    <select id="getTagsByArticleId" resultMap="TagsMap" parameterType="java.util.List">
        select
          t.id t_id,
          ta.article_id ta_article_id,
          t.name t_name,
          t.article_count t_article_count,
          t.bg_color t_bg_color,
          t.font_color t_font_color,
          t.create_time t_create_time,
          t.update_time t_update_time,
          t.status t_status
        from t_tag t
        left join t_article_tag ta
        on t.id=ta.tag_id
        where ta.article_id in
        <foreach collection="articleIds" separator="," open="(" close=")" index="" item="articleId">
            #{articleId, jdbcType=INTEGER}
        </foreach>
        order by ta.article_id ASC
    </select>

    <!--获取热门标签-->
    <select id="getHotTags" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from t_tag
        order by article_count desc
        <if test="size!=null">
            limit #{size, jdbcType=INTEGER}
        </if>
    </select>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from t_tag
    where id = #{id,jdbcType=INTEGER}
  </delete>
